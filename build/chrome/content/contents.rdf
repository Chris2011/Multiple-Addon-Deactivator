<?xml version="1.0"?>


<RDF:RDF xmlns:RDF="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:chrome="http://www.mozilla.org/rdf/chrome#">

  <!-- list all the packages being supplied -->
  <RDF:Seq about="urn:mozilla:package:root">
    <RDF:li resource="urn:mozilla:package:MAD"/>
  </RDF:Seq>

  <!-- package information -->
  <RDF:Description about="urn:mozilla:package:MAD"
                   chrome:name="MAD"
                   chrome:displayName="MAD"
                   chrome:author="ChrisLE"
                   chrome:extension="true"
                   chrome:description="Multiple Addon Deactivator (M.A.D) is an add-on that can (de)activate one, many or each add-on at the same time."
                   chrome:settingsURL="chrome://MAD/content/options.xul">
  </RDF:Description>

  <!-- overlay information -->
  <RDF:Seq about="urn:mozilla:overlays">
   <RDF:li resource="chrome://browser/content/browser.xul"/>
   <RDF:li resource="chrome://navigator/content/navigator.xul"/>
   <RDF:li resource="chrome://editor/content/editor.xul"/>   
  </RDF:Seq>

  <!-- firefox overlays -->
  <RDF:Seq about="chrome://browser/content/browser.xul">
    <RDF:li>chrome://MAD/content/overlay.xul</RDF:li>
  </RDF:Seq>
  
  <!-- mozilla overlays -->
  <RDF:Seq about="chrome://navigator/content/navigator.xul">
    <RDF:li>chrome://MAD/content/overlay.xul</RDF:li>
  </RDF:Seq>

  <!-- KompoZer/Nvu overlays -->
  <RDF:Seq about="chrome://editor/content/editor.xul">
    <RDF:li>chrome://MAD/content/overlay.xul</RDF:li>
  </RDF:Seq>

</RDF:RDF>
